		"eslint-plugin-react-hooks": "^4.5.0",
		"parcel": "^2.5.0",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"sass": "^1.51.0",
		"type-fest": "^2.12.2",
		"typescript": "^4.6.4",
		"xo": "^0.48.0"
	},
	"license": "MIT",
	"name": "melusc.github.io",
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"private": true,
	"scripts": {
		"build": "yarn fmt && yarn test && tsc --noEmit && yarn build-only",
		"build-only": "rimraf dist/www && yarn parcel:b",
		"parcel:w": "parcel serve --dist-dir dist/www --no-cache \"src/**/*.html\"",
		"parcel:b": "parcel build --dist-dir dist/www --no-cache \"src/**/*.html\"",
		"fmt": "prettier -w . && xo --fix",
		"start": "yarn parcel:w",
		"test": "tsc --project tsconfig.test.json && ava"
	},
	"version": "1.0.0"
}
