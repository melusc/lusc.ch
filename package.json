	"license": "MIT",
	"name": "melusc.github.io",
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"private": true,
	"scripts": {
		"ava": "npm run build-ts-tests && ava",
		"build": "npm run lint && npm run test && npm run build-no-test",
		"build-no-test": "npm run webpack:b && npm run gulp:b",
		"build-ts-tests": "del-cli dist/* && tsc --project test.tsconfig.json",
		"gulp:b": "gulp build",
		"gulp:w": "gulp start",
		"lint": "prettier -w . && xo --fix",
		"sass": "sass src:src",
		"sass:w": "sass src:src --watch",
		"serve": "serve docs",
		"start": "concurrently npm:webpack:w npm:gulp:w npm:serve",
		"test": "xo && npm run ava",
		"webpack:b": "webpack -c webpack-config.js --env=production",
		"webpack:w": "webpack -c webpack-config.js -w"
	},
	"sideEffects": false,
	"version": "1.0.0"
}
