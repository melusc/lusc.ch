		"hex-rgb": "^5.0.0",
		"immer": "^9.0.14",
		"json5": "^2.2.1",
		"lodash-es": "^4.17.21",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"rgb-hex": "^4.0.0",
		"styled-components": "^5.3.5"
	},
	"resolutions": {
		"terser": "5.13.1"
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@lusc/tsconfig": "^1.1.0",
		"@parcel/transformer-sass": "^2.5.0",
		"@parcel/transformer-svg-react": "^2.5.0",
