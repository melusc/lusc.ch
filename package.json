{
	"author": "lusc",
	"ava": {
		"environmentVariables": {
			"NODE_ENV": "AVA_TESTING"
		},
		"files": [
			"test/**/*.test.ts"
		],
		"typescript": {
			"compile": false,
			"extensions": [
				"ts"
			],
			"rewritePaths": {
				"test/": "dist/test/test/"
			}
		}
	},
	"dependencies": {
		"clsx": "^1.1.1",
		"dayjs": "^1.10.7",
		"hex-rgb": "^5.0.0",
		"immer": "^9.0.6",
		"json5": "^2.2.0",
		"lodash-es": "^4.17.21",
		"preact": "^10.5.15",
		"rgb-hex": "^4.0.0"
	},
	"devDependencies": {
		"@ava/typescript": "^2.0.0",
		"@lusc/tsconfig": "^1.0.0",
		"@parcel/transformer-sass": "^2.0.1",
		"@prettier/plugin-xml": "^1.1.0",
		"@types/lodash-es": "^4.17.5",
		"@typescript-eslint/parser": "^5.3.1",
		"ava": "^3.15.0",
		"concurrently": "^6.3.0",
		"del-cli": "^4.0.1",
		"eslint-config-xo-react": "^0.25.0",
		"eslint-plugin-react": "^7.27.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"gulp": "^4.0.2",
		"gulp-rename": "^2.0.0",
		"gulp-svgmin": "^4.1.0",
		"lodash": "^4.17.21",
		"parcel": "^2.0.1",
		"prettier": "^2.4.1",
		"sass": "^1.43.4",
		"type-fest": "^2.5.4",
		"typescript": "^4.4.4",
		"xo": "^0.46.4"
	},
	"alias": {
		"react": "preact/compat",
		"react-dom": "preact/compat",
		"lodash": "lodash-es"
	},
	"license": "MIT",
	"name": "melusc.github.io",
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"private": true,
	"scripts": {
		"ava": "npm run build-ts-tests && ava",
		"build": "npm run lint && npm run ava && tsc --noEmit && npm run build-no-tests",
		"parcel:w": "parcel serve --dist-dir dist/www --no-cache \"src/**/*.html\"",
		"parcel:b": "parcel build --dist-dir dist/www --no-cache \"src/**/*.html\"",
		"build-no-tests": "del-cli \"dist/www/*\" && npm run parcel:b",
		"build-ts-tests": "del-cli \"dist/test/*\" && tsc --project test.tsconfig.json",
		"gulp:b": "gulp build",
		"gulp:w": "gulp start",
		"lint": "prettier -w . && xo --fix",
		"start": "concurrently npm:parcel:w npm:gulp:w",
		"test": "xo && npm run ava"
	},
	"version": "1.0.0"
}
