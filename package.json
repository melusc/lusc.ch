{
	"author": "lusc",
	"ava": {
		"environmentVariables": {
			"NODE_ENV": "AVA_TESTING"
		},
		"files": [
			"src/**/test/*.ts"
		],
		"typescript": {
			"compile": false,
			"extensions": [
				"ts"
			],
			"rewritePaths": {
				"src/": "dist/test/"
			}
		}
	},
