{
	"author": "lusc",
	"ava": {
		"environmentVariables": {
			"NODE_ENV": "AVA_TESTING"
		},
		"files": [
			"src/**/test/*.ts"
		],
		"typescript": {
			"compile": false,
			"extensions": [
				"ts"
			],
			"rewritePaths": {
				"src/": "dist/test/"
			}
		}
	},
	"type": "module",
	"dependencies": {
		"@lusc/sudoku": "^2.4.0",
		"@lusc/truth-table": "^1.0.5",
		"clsx": "^1.1.1",
		"dayjs": "^1.11.0",
		"hex-rgb": "^5.0.0",
		"immer": "^9.0.12",
		"json5": "^2.2.1",
		"lodash-es": "^4.17.21",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"rgb-hex": "^4.0.0",
		"styled-components": "^5.3.5"
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@lusc/tsconfig": "^1.0.0",
		"@parcel/transformer-sass": "^2.4.1",
		"@parcel/transformer-svg-react": "^2.4.1",
		"@types/lodash-es": "^4.17.6",
		"@types/node": "^17.0.23",
		"@types/react": "^17.0.43",
		"@types/react-dom": "^17.0.14",
		"@types/styled-components": "^5.1.25",
		"ava": "^4.1.0",
		"babel-plugin-styled-components": "^2.0.6",
		"concurrently": "^7.0.0",
		"del-cli": "^4.0.1",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.4.0",
		"gulp": "^4.0.2",
		"gulp-rename": "^2.0.0",
		"gulp-svgmin": "^4.1.0",
		"parcel": "^2.4.1",
		"prettier": "^2.6.1",
		"sass": "^1.49.10",
		"type-fest": "^2.12.2",
		"typescript": "^4.6.3",
		"xo": "^0.48.0"
	},
	"license": "MIT",
	"name": "melusc.github.io",
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"private": true,
	"scripts": {
		"ava": "yarn build-ts-tests && ava",
		"build": "yarn fmt && yarn run ava && tsc --noEmit && yarn build-no-tests",
		"parcel:w": "parcel serve --dist-dir dist/www --no-cache \"src/**/*.html\"",
		"parcel:b": "parcel build --dist-dir dist/www --no-cache \"src/**/*.html\"",
		"build-no-tests": "del-cli \"dist/www/*\" && yarn parcel:b",
		"build-ts-tests": "del-cli \"dist/test/*\" && tsc --project tsconfig.test.json",
		"gulp:b": "gulp build",
		"gulp:w": "gulp start",
		"fmt": "prettier -w . && xo --fix",
		"start": "concurrently yarn:parcel:w yarn:gulp:w",
		"test": "xo && yarn run ava",
		"build-scripts": "del-cli \"dist/scripts/*\" && tsc --project scripts/tsconfig.json"
	},
	"version": "1.0.0"
}
